<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.text.*?>
<?import javafx.geometry.Insets?>

<AnchorPane prefHeight="650.0" prefWidth="400.0" style="-fx-background-color: white;" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.pet_adoption_system.LoginController">

    <ImageView fitHeight="150.0" fitWidth="400.0" pickOnBounds="true" preserveRatio="false">
        <Image url="@vector1.png" />
    </ImageView>

    <VBox alignment="CENTER" spacing="20.0" AnchorPane.bottomAnchor="100.0" AnchorPane.leftAnchor="30.0" AnchorPane.rightAnchor="30.0" AnchorPane.topAnchor="150.0">

        <Label text="Hi, Welcome Back! ðŸ‘‹" textFill="BLACK">
            <font>
                <Font name="System Bold" size="28.0" />
            </font>
        </Label>

        <ToggleButton fx:id="switchRole" maxWidth="Infinity" text="User Mode" style="-fx-background-radius: 20;" />

        <VBox style="-fx-border-color: #cccccc; -fx-border-radius: 25; -fx-padding: 5;">
            <TextField fx:id="etUser" promptText="Phone Number" style="-fx-background-color: transparent; -fx-padding: 10;" />
        </VBox>

        <HBox alignment="CENTER_LEFT" style="-fx-border-color: #cccccc; -fx-border-radius: 25; -fx-padding: 5;">
            <PasswordField fx:id="etPass" promptText="Password" style="-fx-background-color: transparent; -fx-padding: 10;" HBox.hgrow="ALWAYS" />
            <ImageView fitHeight="24.0" fitWidth="24.0" pickOnBounds="true" preserveRatio="true">
                <Image url="@view.png" />
            </ImageView>
        </HBox>

        <Button fx:id="btnLogin"
                onAction="#handleLogin"
                maxWidth="Infinity"
                prefHeight="60.0"
                style="-fx-background-color: linear-gradient(to right, #21d49b, #ffba16); -fx-background-radius: 15; -fx-text-fill: black; -fx-font-weight: bold; -fx-font-size: 18;"
                text="Login" />

        <HBox alignment="CENTER" spacing="5.0">
            <Label text="Don't have an account?" textFill="BLACK" />
            <Button fx:id="btnSignup"
                    text="Sign Up"
                    onAction="#handleSignup"
                    maxWidth="Infinity"
                    style="-fx-background-color: transparent; -fx-text-fill: #00b8d4; -fx-font-weight: bold; -fx-cursor: hand; -fx-border-color: #00b8d4; -fx-border-radius: 5; -fx-border-width: 1;" />
        </HBox>

    </VBox>

    <ImageView fitHeight="150.0" fitWidth="400.0" pickOnBounds="true" preserveRatio="false" AnchorPane.bottomAnchor="0.0">
        <Image url="@vector2.png" />
    </ImageView>

    <ProgressIndicator fx:id="progressBarLogin" visible="false" AnchorPane.bottomAnchor="50.0" AnchorPane.leftAnchor="175.0" />

</AnchorPane>