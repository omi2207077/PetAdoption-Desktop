<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.text.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.paint.Color?>

<HBox fx:id="root"
      fx:controller="com.example.pet_adoption_system.PetItemController"
      alignment="CENTER_LEFT"
      spacing="10.0"
      style="-fx-background-color: white; -fx-background-radius: 5; -fx-border-radius: 5; -fx-border-color: rgba(0, 0, 0, 0.36); -fx-border-width: 1;"
      xmlns="http://javafx.com/javafx/17"
      xmlns:fx="http://javafx.com/fxml/1">

    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
    </padding>

    <effect>
        <DropShadow blurType="GAUSSIAN" height="10.0" radius="4.5" width="10.0">
            <color>
                <Color opacity="0.15" />
            </color>
        </DropShadow>
    </effect>


    <VBox alignment="CENTER_LEFT" spacing="3.0" HBox.hgrow="ALWAYS">
        <padding>
            <Insets left="8.0" right="8.0" />
        </padding>

        <Label fx:id="tvPetName" text="Pet Name" textFill="BLACK">
            <font>
                <Font name="System Bold" size="14.0" />
            </font>
        </Label>

        <Label fx:id="tvPetDes" text="Pet Description" textFill="#868686" wrapText="true">
            <font>
                <Font size="11.0" />
            </font>
        </Label>

        <Label fx:id="tvPetStatus" text="Available" textFill="#4caf50">
            <font>
                <Font name="System Bold" size="12.0" />
            </font>
        </Label>
    </VBox>

    <Button fx:id="btnDelete" mnemonicParsing="false" style="-fx-background-color: #F44336; -fx-cursor: hand;" text="Delete" textFill="WHITE">
        <font>
            <Font name="System Bold" size="12.0" />
        </font>
    </Button>

</HBox>