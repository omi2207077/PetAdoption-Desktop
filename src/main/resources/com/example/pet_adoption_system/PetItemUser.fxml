<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.text.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.paint.Color?>

<VBox fx:id="root"
      alignment="TOP_LEFT"
      prefWidth="300.0"
      spacing="0.0"
      style="-fx-background-color: white; -fx-background-radius: 12; -fx-border-radius: 12; -fx-border-color: #eeeeee; -fx-border-width: 1;"
      xmlns="http://javafx.com/javafx/17"
      xmlns:fx="http://javafx.com/fxml/1">

    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
    </padding>

    <effect>
        <DropShadow blurType="GAUSSIAN" height="15.0" radius="7.0" width="15.0">
            <color>
                <Color opacity="0.15" />
            </color>
        </DropShadow>
    </effect>



    <Label fx:id="tvPetName" text="Pet Name" textFill="BLACK">
        <font>
            <Font name="System Bold" size="16.0" />
        </font>
        <padding>
            <Insets top="6.0" />
        </padding>
    </Label>

    <Label fx:id="tvPetDesc" text="Pet description here" textFill="#666666" wrapText="true">
        <font>
            <Font size="12.0" />
        </font>
        <VBox.margin>
            <Insets bottom="4.0" top="4.0" />
        </VBox.margin>
    </Label>

    <Button fx:id="btnAdopt" maxWidth="Infinity" mnemonicParsing="false"
            style="-fx-background-color: #2196F3; -fx-cursor: hand;"
            text="Apply for Adoption" textFill="WHITE">
        <font>
            <Font name="System Bold" size="13.0" />
        </font>
        <VBox.margin>
            <Insets top="6.0" />
        </VBox.margin>
    </Button>

</VBox>