<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="600.0" prefWidth="400.0" style="-fx-background-color: white;" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.pet_adoption_system.UserPanelController">

    <VBox spacing="0.0" AnchorPane.bottomAnchor="80.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">

        <Label alignment="CENTER" maxWidth="Infinity" prefHeight="56.0" style="-fx-background-color: #2196F3;" text="Pet Adoption" textFill="WHITE">
            <font>
                <Font name="System Bold" size="20.0" />
            </font>
        </Label>

        <Label fx:id="tvWelcome" text="Welcome, User" textFill="BLACK">
            <font>
                <Font name="Roboto" size="16.0" />
            </font>
            <padding>
                <Insets bottom="12.0" left="12.0" right="12.0" top="12.0" />
            </padding>
        </Label>

        <Label fx:id="tvNoData" alignment="CENTER" maxWidth="Infinity" text="No Data Found" textFill="DARKGRAY" visible="false">
            <font>
                <Font name="Roboto" size="14.0" />
            </font>
            <VBox.margin>
                <Insets top="20.0" />
            </VBox.margin>
        </Label>

        <ListView fx:id="listUserPets" VBox.vgrow="ALWAYS">
            <VBox.margin>
                <Insets left="10.0" right="10.0" />
            </VBox.margin>
        </ListView>

    </VBox>

    <Button fx:id="btnLogout" maxWidth="Infinity" prefHeight="45.0" style="-fx-background-color: #F44336;" text="Logout" textFill="WHITE" AnchorPane.bottomAnchor="15.0" AnchorPane.leftAnchor="15.0" AnchorPane.rightAnchor="15.0">
        <font>
            <Font name="System Bold" size="14.0" />
        </font>
    </Button>

</AnchorPane>