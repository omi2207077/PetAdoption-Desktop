<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.text.*?>
<?import javafx.geometry.Insets?>

<AnchorPane prefHeight="650.0" prefWidth="400.0" style="-fx-background-color: white;" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.pet_adoption_system.SignupController">

    <ImageView fitHeight="150.0" fitWidth="400.0" pickOnBounds="true" preserveRatio="false">
        <Image url="@vector1.png" />
    </ImageView>

    <VBox alignment="TOP_CENTER" spacing="15.0" AnchorPane.leftAnchor="30.0" AnchorPane.rightAnchor="30.0" AnchorPane.topAnchor="160.0">

        <Label text="Create an account" textFill="BLACK">
            <font>
                <Font name="System Bold" size="28.0" />
            </font>
            <VBox.margin>
                <Insets bottom="20.0" />
            </VBox.margin>
        </Label>

        <VBox style="-fx-border-color: #cccccc; -fx-border-radius: 25; -fx-background-radius: 25; -fx-padding: 5;">
            <TextField fx:id="etName" promptText="Name" style="-fx-background-color: transparent; -fx-padding: 10;" />
        </VBox>

        <VBox style="-fx-border-color: #cccccc; -fx-border-radius: 25; -fx-background-radius: 25; -fx-padding: 5;">
            <TextField fx:id="etPhone" promptText="Phone Number" style="-fx-background-color: transparent; -fx-padding: 10;" />
        </VBox>

        <VBox style="-fx-border-color: #cccccc; -fx-border-radius: 25; -fx-background-radius: 25; -fx-padding: 5;">
            <PasswordField fx:id="etPassword" promptText="Password" style="-fx-background-color: transparent; -fx-padding: 10;" />
        </VBox>

        <StackPane fx:id="btnSignup" style="-fx-cursor: hand;">
            <Button maxWidth="Infinity" prefHeight="60.0" style="-fx-background-color: linear-gradient(to right, #21d49b, #ffba16); -fx-background-radius: 15; -fx-text-fill: black; -fx-font-weight: bold; -fx-font-size: 18;" text="Sign Up" />
            <ImageView fitHeight="20.0" fitWidth="20.0" pickOnBounds="true" preserveRatio="true" StackPane.alignment="CENTER_RIGHT">
                <Image url="@arow.png" />
                <StackPane.margin>
                    <Insets right="15.0" />
                </StackPane.margin>
            </ImageView>
        </StackPane>

        <HBox alignment="CENTER" spacing="5.0">
            <Label text="Already have an account?" textFill="BLACK">
                <font>
                    <Font name="System Bold" size="12.0" />
                </font>
            </Label>
            <Label fx:id="tvLogin" text="Login" textFill="#1a71d4" style="-fx-cursor: hand; -fx-font-weight: bold;">
                <font>
                    <Font size="13.0" />
                </font>
            </Label>
        </HBox>

    </VBox>

    <ImageView fitHeight="180.0" fitWidth="400.0" pickOnBounds="true" preserveRatio="false" AnchorPane.bottomAnchor="0.0">
        <Image url="@vector2.png" />
    </ImageView>

    <ProgressIndicator fx:id="progressBarSignup" visible="false" AnchorPane.topAnchor="20.0" AnchorPane.leftAnchor="175.0" />

</AnchorPane>